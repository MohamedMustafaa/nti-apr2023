<section class="container my-5">
  <h2>Add Task</h2>
  <form action="/addTaskLogic">
    <div class="mb-3">
      <input name="title" class="form-control" placeholder="title">
    </div>
    <div class="mb-3">
      <input name="content" class="form-control" placeholder="content">
    </div>
    <div class="mb-3">
      <input name="dueDate" class="form-control" placeholder="date" type="date">
    </div>
    <div class="mb-3">
      <select name="status" class="form-select">
        <option value="Active">Active</option>
        <option value="InActive" selected="selected">In Active</option>
      </select>
    </div>
    <div class="mb-3">
      <button class="btn btn-primary">Add</button>
    </div>
  </form>
</section>

{{>footer}}
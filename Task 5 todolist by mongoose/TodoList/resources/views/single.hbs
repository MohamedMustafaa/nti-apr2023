{{>header}}
{{>nav}}
<section class="my-5 container">
  {{#if data}}
  <div>
    <h3>{{data.id}}</h3>
    <h3>{{data.title}}</h3>
    <h3>{{data.content}}</h3>
    <h3>{{data.status}}</h3>
    <h3>{{data.dueDate}}</h3>
  </div>
  {{else}}
  <div class="alert alert-danger">
    No task found
  </div>
  {{/if}}
</section>
{{>footer}}